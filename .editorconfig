# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# Use 2-spaces to indent .csproj files
[*.csproj]
charset = utf-8-bom
indent_size = 2
insert_final_newline = false

# Use 2-spaces to indent .csproj files
[*.fsproj]
charset = utf-8-bom
indent_size = 2
insert_final_newline = false

# Use tabs to indent .sln files
[*.sln]
indent_style = tab

# Don't add final newline to input text files
[*.txt]
insert_final_newline = false
